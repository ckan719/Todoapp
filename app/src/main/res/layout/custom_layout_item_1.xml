<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:id="@+id/rltLayout"
                android:layout_height="wrap_content">
    <ImageButton android:src="@drawable/trash"
                 android:layout_gravity="center_vertical"
                 android:layout_width="40dp"
                 android:id="@+id/btDel"
                 android:layout_marginLeft="10dp"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/evolbutton"
                 android:layout_height="40dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_toLeftOf="@id/btDel"
                  android:gravity="center_vertical"
                  android:background="@drawable/evol"
                  android:layout_height="wrap_content">
        <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvShowNv"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:text="st here"
                android:textSize="18sp"
                android:layout_height="40dp"
                android:layout_width="match_parent"/>
    </LinearLayout>

</RelativeLayout>